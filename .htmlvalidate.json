{
  "extends": ["html-validate:recommended"],
  "rules": {
    "close-order": "error",
    "void-style": ["error", { "style": "omit" }],
    "no-trailing-whitespace": "off",
    "require-sri": "off",
    "no-inline-style": "warn",
    "prefer-native-element": "warn",
    "no-redundant-role": "error",
    "wcag/h37": "error",
    "wcag/h67": "error",
    "aria-label-misuse": "error",
    "aria-hidden-body": "error",
    "empty-heading": "error",
    "heading-level": "warn",
    "missing-doctype": "error",
    "no-missing-references": "error",
    "script-type": "off",
    "svg-focusable": "error",
    "unrecognized-char-ref": "error",
    "attribute-boolean-style": "error",
    "attribute-empty-style": "error",
    "doctype-style": "error",
    "element-case": "error",
    "element-permitted-content": "error",
    "element-required-attributes": "error",
    "element-required-content": "error",
    "id-pattern": {
      "severity": "error",
      "pattern": "kebabcase"
    },
    "input-missing-label": "error",
    "long-title": ["error", { "maxlength": 70 }],
    "meta-refresh": "error",
    "no-abstract-role": "error",
    "no-autoplay": "warn",
    "no-deprecated-attr": "error",
    "no-dup-attr": "error",
    "no-dup-class": "warn",
    "no-dup-id": "error",
    "no-implicit-close": "error",
    "no-missing-close": "error",
    "no-multiple-main": "error",
    "no-raw-characters": "error",
    "no-self-closing": "error",
    "no-unknown-elements": "error",
    "no-utf8-bom": "error",
    "prefer-button": "error",
    "prefer-tbody": "error",
    "require-csp-nonce": "off",
    "tel-non-breaking": "error",
    "text-content": "error",
    "valid-autocomplete": "error",
    "valid-id": "error"
  },
  "elements": [
    "html5"
  ]
}